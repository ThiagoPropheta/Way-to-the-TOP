primeiro_valor = input('Digite um valor: ')
segundo_valor = input('Digite outro valor: ')

condicao1 = (primeiro_valor > segundo_valor)
condicao2 = (segundo_valor > primeiro_valor)
condicao3 = (primeiro_valor == segundo_valor)

if condicao1:
    print( " o primeiro valor", primeiro_valor, ' é maior que o segundo valor', segundo_valor)

elif condicao2:
    print (" O segundo valor", segundo_valor, "é maior que o primeiro valor", primeiro_valor)

elif condicao3:
    print( ' Os dois valores são iguais, sendo , o primeiro', primeiro_valor, 'e o segundo valor', segundo_valor)

else:
    print('você não digitou valores')
